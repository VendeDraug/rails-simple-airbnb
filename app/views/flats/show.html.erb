<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200')">
</div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-xs-8">
      <div class="card-content show-card">
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
      </div>
      <div class="card-content show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="card-content show-card">
        <h3>Book this place!</h3>
      </div>
      <div class="card-content show-card">
        <h3>Details</h3>
        <div class="card-flex">
          <div><i class="fas fa-users"></i>    <%= @flat.number_of_guests %></div>
          <div><i class="fas fa-pound-sign"></i>    <%= @flat.price_per_night %></div>
        </div>
      </div>
      <div class="card-content show-card">
        <p>Share</p>  <i class="fab fa-facebook-square"></i>  <i class="fab fa-twitter-square"></i>  <i class="fab fa-pinterest-square"></i>  <i class="fas fa-envelope-square"></i>
      </div>
    </div>
  </div>
</div>
